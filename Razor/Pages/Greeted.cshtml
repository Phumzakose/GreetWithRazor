@page
@model GreetWithRazor.Pages.GreetedModel
@{
  ViewData["Title"] = "Greeted page";
}
<div class="text-center">
    <h2 class="display-4">Greeted People</h2>

  <div class="table">
    @if (Model.List != null)
    {
    <table class="table table-success table-striped">
      <tr>
        <th>FirstName</th> 
        <th>Greeted Times</th>
        <th>Remove Greeted user</th>
        </tr>
    @foreach (KeyValuePair<string, int> kv in @Model.List)
    {
      <tr>
        <td>@kv.Key </td>
      
        <td>@kv.Value</td>
        <td>
          <form asp-page-handler="remove" method="post">
              <input asp-for="Greet.FirstName" type="hidden" asp-route-name="name" value="@kv.Key" />
             <button asp-page-handler="remove" asp-route-name="name" class="btn1, btn btn-danger ">Remove</button>
          </form>
        </td>
      </tr>
    }
    </table>
    }
  </div>
    
      <div class="greeted">

        @if(Model.Handler == "clear")
            {
              @Model.Message;
            }
      </div>
            <form asp-page-handler="clear" method="post">
            <button asp-page-handler="clear" class="btn1, btn btn-danger btn-lg" type="clear" >Clear All</button>
            </form>
  

</div>