@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
<div class="card"  style="background-color: #e3f2fd;">

    <h1 class="display-4">Greetings App</h1>
    
    <div class="name">
        <form method="post">

         <div class="firstname">
            @if(Model.Handler != "clear")
            {
            <div class="validation">
            <span asp-validation-for="Greet!.FirstName" class="text-danger"></span>
            </div>
            }
            <label asp-for="Greet!.FirstName">Name:</label>
            <input asp-for="Greet!.FirstName"  placeholder="First name" aria-label="First name" /><br>
        </div>
        <div class="radio">
            @if(Model.Handler != "clear")
            {
            <div class="validation">
             <span asp-validation-for="Greet!.Language" class="text-danger"></span>
            </div>

            }
        
              <div class="form-check form-check-inline">
            <input  asp-for="Greet!.Language" class="form-check-input" type="radio" id="flexchecked" value="isixhosa">
            <label class="form-check-label" for="Greet!.Language">IsiXhosa</label>
            </div>
            <div class="form-check form-check-inline">
            <input asp-for="Greet!.Language" class="form-check-input"  type="radio"  id="Language" value="setswana">
            <label class="form-check-label" for="inlineRadio2">Setswana</label>
            </div>
            <div class="form-check form-check-inline">
            <input asp-for="Greet!.Language" class="form-check-input"  type="radio"  id="Language" value="isizulu">
            <label class="form-check-label" for="inlineRadio3">IsiZulu</label>
            </div>
        </div> 
        <div class="counter">
            counter: @Model.count
        </div>
                <div class="button">
                <button asp-page-handler="Greet" class="btn btn-primary btn-lg" type="submit" >Greet</button>
                <button asp-page-handler="greetedPeople" class="btn btn-danger btn-lg" type="greetedPeople">Greeted</button>
                </div>

        </form>
    </div>


    <div class="greeting">
    @if(Model.Greet!= null && Model.Greet.FirstName != null)
    {
    @Model.Greeting
    }
    </div>
</div>
</div>




